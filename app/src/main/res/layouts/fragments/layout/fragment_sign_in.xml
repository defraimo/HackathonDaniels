<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignInFragment"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="שם מלא"
        android:textAlignment="textEnd"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/ivUserNameTab"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <ImageView
        android:id="@+id/ivUserNameTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bar_grey"
        app:layout_constraintEnd_toEndOf="@+id/ivEmailTab"
        app:layout_constraintStart_toStartOf="@+id/ivEmailTab"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etUserFullName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserNameTab"
        app:layout_constraintEnd_toEndOf="@+id/ivUserNameTab"
        app:layout_constraintStart_toStartOf="@+id/ivUserNameTab"
        app:layout_constraintTop_toTopOf="@+id/ivUserNameTab" />

    <TextView
        android:id="@+id/tvFb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:text="הרשמה"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_mini_icon" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="רדיו קול עציון"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/ivPasswordTab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bar_grey"
        app:layout_constraintEnd_toEndOf="@+id/ivEmailTab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivEmailTab"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ImageView
        android:id="@+id/ivEmailTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bar_grey"
        app:layout_constraintEnd_toEndOf="@+id/tvFb"
        app:layout_constraintStart_toStartOf="@+id/tvFb"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="אימייל"
        android:textAlignment="textEnd"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/ivEmailTab"
        app:layout_constraintTop_toBottomOf="@+id/tvFb" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="סיסמא"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toBottomOf="@+id/ivUserNameTab" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmailTab"
        app:layout_constraintEnd_toEndOf="@+id/ivEmailTab"
        app:layout_constraintStart_toStartOf="@+id/ivEmailTab"
        app:layout_constraintTop_toTopOf="@+id/ivEmailTab" />

    <EditText
        android:id="@+id/etSignInPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/ivPasswordTab"
        app:layout_constraintEnd_toEndOf="@+id/ivPasswordTab"
        app:layout_constraintStart_toStartOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toTopOf="@+id/ivPasswordTab" />

    <ImageView
        android:id="@+id/ivSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_button_blue_long"
        app:layout_constraintEnd_toEndOf="@+id/ivPasswordTab"
        app:layout_constraintStart_toStartOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toBottomOf="@+id/ivTab" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הירשם"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivSignUp"
        app:layout_constraintEnd_toEndOf="@+id/ivSignUp"
        app:layout_constraintStart_toStartOf="@+id/ivSignUp"
        app:layout_constraintTop_toTopOf="@+id/ivSignUp" />

    <ImageView
        android:id="@+id/ivTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserTakePhoto" />

    <ImageView
        android:id="@+id/ivUserTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_button_small_grey"
        app:layout_constraintEnd_toEndOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <ImageView
        android:id="@+id/ivUserFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_small_grey"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserTakePhoto"
        app:layout_constraintStart_toStartOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toTopOf="@+id/ivUserTakePhoto" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="הוסף תמונה"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/ivPasswordTab"
        app:layout_constraintTop_toBottomOf="@+id/etSignInPassword" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="צלם תמונה"
        android:textColor="@color/com_facebook_button_background_color_focused_disabled"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserTakePhoto"
        app:layout_constraintEnd_toEndOf="@+id/ivUserTakePhoto"
        app:layout_constraintStart_toStartOf="@+id/ivUserTakePhoto"
        app:layout_constraintTop_toTopOf="@+id/ivUserTakePhoto" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מגלריה"
        android:textColor="@color/com_facebook_button_background_color_focused_disabled"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserFromGallery"
        app:layout_constraintEnd_toEndOf="@+id/ivUserFromGallery"
        app:layout_constraintStart_toStartOf="@+id/ivUserFromGallery"
        app:layout_constraintTop_toTopOf="@+id/ivUserFromGallery" />

</android.support.constraint.ConstraintLayout>